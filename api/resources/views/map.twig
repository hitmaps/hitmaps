        function buildDisguiseArea(disguiseArea) {
            var latlngs = [];
            for (var j in disguiseArea.vertices) {
                var coords = disguiseArea.vertices[j].split(',');
                latlngs.push([coords[0], coords[1]]);
            }
            var polygon = L.polygon(latlngs, {
                color: disguiseArea.type === 'trespassing' ? 'yellow' : '#f00',
                stroke: false,
                weight: 4,
                opacity: .75,
                custom: {
                    id: disguiseArea.id
                }
            }).on('click', function() {
                if (parseInt($('input[type="hidden"][name="edit-mode"]').val()) !== 4) {
                    return;
                }

                g_openMarker = this;

                $('input[type="hidden"][name="trespassing-region-id"]').val(this.options.custom.id);
                $('#confirm-delete-disguise-trespassing-modal').modal('show');
            });

            var tooltip = disguiseArea.type === 'trespassing' ? 'Trespassing' : 'Hostile Area';
            return polygon.bindTooltip(tooltip, {sticky: true});
        }

